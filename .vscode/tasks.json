{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "options": {
    "env": {
        "SCHEME": "https://",
        "DOMAIN": "www.mista.me"
    }
  },
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "WEBSITE_URL=${env:SCHEME}${env:DOMAIN} cabal run website build",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "rebuild",
      "type": "shell",
      "command": "WEBSITE_URL=${env:SCHEME}${env:DOMAIN} cabal run website rebuild",
      "problemMatcher": []
    },
    {
      "label": "watch",
      "type": "shell",
      "command": "WEBSITE_URL=${env:SCHEME}${env:DOMAIN} cabal run website watch",
      "problemMatcher": []
    }
  ]
}